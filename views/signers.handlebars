<meta name="csrf-token" content="{{csrfToken}}">
<div class="parallax-container valign-wrapper">
    <div class="section no-pad-bot">
        <div class="container">
            <div class="row center">
                <h5 class="header col s12 light">{{signers.rowCount}} {{#if_eq signers.rowCount "1"}} person{{else}}persons{{/if_eq}}{{#if city}} from {{city}} {{/if}}{{#if_eq signers.rowCount "1"}} has{{else}} have{{/if_eq}} signed the petition!
                </h5>
            </div>
        </div>
    </div>
    <div class="parallax"><img src="/background2.jpg" alt="Unsplashed background img 2"></div>
</div>
<div class="container">
    <div class="section">
        <div class="row">
            <div class="col s12 center">
                {{#each signers.rows}}
                    <p class="signer">{{#if url}}<a href="{{url}}">{{/if}}
                        {{first}} {{ last}}
                        {{#if url}}</a>{{/if}}
                        {{age}}
                        {{#if city}}<a href="/signers/{{city}}">{{city}}</a>{{/if}}
                    </p>
                {{/each}}
            </div>
        </div>

    </div>
    <div class="section">
        <div class="row">
            <div class="col s12">
                <div id="map"></div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="/js/map.js"></script>
